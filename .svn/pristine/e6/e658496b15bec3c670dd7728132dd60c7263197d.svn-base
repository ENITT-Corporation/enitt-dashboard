scx@charset "utf-8";

/*** common ***/
.ani{transition:all 0.3s ease;}

#wrap {height:auto; position:relative;margin:0 auto; max-width:1300px}

.wrap {height: 100%; width: 100%;}


/*** #header ***/
#header{height:100px;position:relative; width:100%; background: #2B3C4E 0% 0% no-repeat padding-box;}

/*** top-header ***/
#header .top-header{top: 10px; left:10px; height:40px; opacity:1; background: #0D253A 0% 0% no-repeat;}
#header .top-header div{position: absolute; width: 200px;}
#header .top-header ul.clockDiv{top: 14px; right: 30px; position: absolute;font-size: 20px;font-weight: bold;}
#header .top-header ul:last-child{float: right;} 
#header .top-header ul li{float:left; line-height: 10px; text-align: center;} 
#header .top-header ul li.mypage{ width: /* 120px; */ 250px; text-align: right; margin-left: 31px;  margin-right: 31px; font-size: 15px; padding-top: 10px;}
#header .top-header ul li.mypage a{background: transparent url(/resources/css/lib/images/icon_user.png) no-repeat; background-position-y: center; padding-left: 25px;}
#header .top-header ul li.line{ width: 1px; height: 20px; line-height: 20px; background: #ADADAD 0% 0% no-repeat; position: relative; margin-top: 10px;}
#header .top-header ul li.login{ width: 80px; margin-left: 31px; margin-right: 31px; font-weight: bold; font-size: 15px; padding-top: 10px;}
#header .top-header ul li.login a{background-position-y: center;}
#header .top-header .logo img{height:20px; top: 20px; margin-top:4px; margin-left:10px; padding-top: 8px;} 

/*** header ***/
#header .header{width: 100%; height: 60px; background-color: #2b3c4e;}
#header .header .home{float: left; width: 300px; height: 60px; line-height: 60px;}
#header .header .home a{height: 60px; line-height: 60px; font-size: 24px; font-weight: bold; padding-left: 10px;}

#header .header .menu{float: left; width:calc(100% - 600px);}
#header .header .menu .gnb ul {margin:0; padding: 0; display: flex;}
#header .header .menu .gnb ul li {line-height: 60px; height: 60px;}
#header .header .menu .gnb ul li:hover{background-color:#FFFFFF; cursor:pointer; color: #2b3c4e; font-weight: bold;}
#header .header .menu .gnb ul li.selected{background-color:#FFFFFF; cursor:pointer; color: #2b3c4e; font-weight: bold;}
#header .header .menu .gnb ul li span {font-size: 22px; font-weight: bold;line-height: 60px;}
#header .header .menu .gnb ul li:not(.disN) {flex: 1; display:block; padding:0 20px; text-align: center;}

#header .header .menu_bottom{float: left; width:100%; border-top: 1px solid #637180; border-bottom: 1px solid #637180;}
#header .header .menu_bottom .gnb ul {margin:0; padding: 0; display: flex;}
#header .header .menu_bottom .gnb ul li {line-height: 60px; height: 60px;}
#header .header .menu_bottom .gnb ul li:hover{background-color:#FFFFFF; cursor:pointer; color: #2b3c4e; font-weight: bold;}
#header .header .menu_bottom .gnb ul li.selected{background-color:#FFFFFF; cursor:pointer; color: #2b3c4e; font-weight: bold;}
#header .header .menu_bottom .gnb ul li span {font-size: 22px; font-weight: bold;line-height: 60px;}
#header .header .menu_bottom .gnb ul li:not(.disN) {flex: 1; display:block; padding:0 20px; text-align: center;}

#header .header .alarm{float: left; text-align: center; font-size: 19px;font-weight: bold; line-height: 60px; width: 300px;}
#header .header .alarm li a.alarm{background: url(/resources/css/lib/images/alarm.png) no-repeat; background-position-x: 60px; background-position-y: center; background-size: 19px 19px;}
#header .header .alarm li ul{background-color: #2B3C4E; width: 300px; border-top:1px solid #141D26; box-shadow: 0px 2px 3px #0000000D; float: left; width: 300px; height: 50px; line-height: 50px;}
#header .header .alarm li ul li:nth-child(1)  a{background: url(/resources/css/lib/images/icon_attention.png) no-repeat; background-position-x: 60px; background-position-y: center; background-size: 19px 19px;}
#header .header .alarm li ul li:nth-child(2) a{background: url(/resources/css/lib/images/icon_warning.png) no-repeat; background-position-x: 60px; background-position-y: center; background-size: 19px 19px;}

/** container **/
#container{ background:#0D253A; padding: 20px; }
#container:after{ display:block; clear:both; content:""}

#container .contents-wrap {height: 100%;}
#container .contents-wrap #sub_head { width:100%; /* height:20px; */}
#container .contents-wrap #sub_title {line-height: 20px; color:#FFFFFF; font-size:18px;}
#container .contents-wrap #sub_title .dashboard{background: url(/resources/css/lib/images/left_dashboard_off.png) 50% 50% no-repeat; padding: 10px; margin-right: 10px;background-size: 20px;}
#container .contents-wrap #sub_title .event{background: url(/resources/css/lib/images/left_event_off.png) 50% 50% no-repeat; padding: 10px; margin-right: 10px;background-size: 18px;}
#container .contents-wrap #sub_title .conveyor{background: url(/resources/css/lib/images/left_conveyorbelt_off2.png) 50% 50% no-repeat; padding: 10px; margin-right: 10px;background-size: 18px;}
#container .contents-wrap #sub_title .eventStats{background: url(/resources/css/lib/images/left_stats_off.png) 50% 50% no-repeat; padding: 10px; margin-right: 10px;background-size: 18px;}
#container .contents-wrap #sub_title .member{background: url(/resources/css/lib/images/left_member_off.png) 50% 50% no-repeat; padding: 10px; margin-right: 10px;background-size: 18px;}

@media (min-width:1501px) {
	#header .header .menu{display:block;}
	#header .header .menu_bottom{display:none;}
}
@media (max-width:1500px) {
	.wrap {min-width :1500px; overflow: auto;}
	#header{height:160px;}
	#header .header {height:120px;}
	#header .header .home{}
	#header .header .menu{display:none;}
	#header .header .menu_bottom{display:block;}
	#header .header .alarm{float: right;}
}

